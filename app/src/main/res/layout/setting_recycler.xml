        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/setting_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"/>
    </LinearLayout>
</layout>