<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp">

        <View
            android:id="@+id/seat_possible"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_rec"
            android:backgroundTint="@color/seat_possible"
            android:clickable="true"></View>

        <View
            android:id="@+id/seat_selected"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_rec"
            android:backgroundTint="@color/seat_selected"
            android:clickable="true"
            android:visibility="invisible"></View>

        <TextView
            android:id="@+id/seat_textview"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="12"
            android:textColor="@color/black" />

    </RelativeLayout>
</layout>