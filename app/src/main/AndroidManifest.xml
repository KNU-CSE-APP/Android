<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.knucseapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Project"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.board.search.SearchActivity" />
        <activity android:name=".ui.board.detail.BoardDetailActivity" />
        <activity android:name=".ui.mypage.menu.SettingActivity" />
        <activity android:name=".ui.mypage.menu.ReservationHistoryActivity" />
        <activity
            android:name=".ui.reservation.seat.ReservationConfirmActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.reservation.seat.ReservationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.SignInActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>